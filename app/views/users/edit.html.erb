<%= form_for(@user, validation: true) do |f| %>
Enter Your Email: <%= f.text_field :email, placeholder: 'example@email.com' %><br /><br />
Enter Your Username: <%= f.text_field :username %><br /><br />
Enter Password: <%= f.password_field :password %><br /><br />
<%= f.submit 'Submit' %>
<% end %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "errors") %>:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
